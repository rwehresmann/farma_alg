<header class='page-header' >
  {{#if id }}
    <h4>Editar exercício do OA {{lo_name}}</h4>
  {{else}}
    <h4>Nova exercício para o OA {{lo_name}}</h4>
  {{/if}}
</header>
<form id="exercise-form" class="form-vertical" novalidate>
  <input name="id" type="hidden" />

  <fieldset>

    <div class="control-group title_group">
      <label class="control-label" for="title">Título *</label>
      <div class="controls">
        <input id="title" name="title" type="text" required="required" />
      </div>
    </div>

    <div class="control-group content_group">
      <label class="control-label" for="content">Enunciado *</label>
      <div class="controls">
        <textarea id='ckeditor' name="content" required="required"></textarea>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="score">Pontos *</label>
      <div class="controls">
        <input type="text" name="score" required="required"/>
      </div>
    </div>

    <a href="#or" data-toggle="collapse">
      <i class="icon-plus-sign"></i>
      Adicionar restrição <b>OR</b>
    </a>

    <div id="or" class="collapse">
      {{#each lo_exercises}}
        <ul>
          <tr>
              <td>{{title}}</td>
            </tr>
        </ul>
        {{/each}}
    </div>

    <a href="#and" data-toggle="collapse">
      <i class="icon-plus-sign"></i>
      Adicionar restrição <b>AND</b>
    </a>

    <div id="and" class="collapse">
      Lorem ipsum dolor text....
    </div>

    <div class="control-group available_group">
      <div class="controls">
        <label class="checkbox">
          <input type="checkbox" name='available'> Publicar (Disponibilizar para alunos)
        </label>
      </div>
    </div>

    <div class="form-actions">
      <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>

  </fieldset>
</form>
